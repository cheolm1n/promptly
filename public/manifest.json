{
  "manifest_version": 3,
  "name": "promptly",
  "version": "1.0.0",
  "description": "A Chrome extension for managing prompt templates and delivering them to AI services.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/appicon_blue_16.png",
      "32": "icons/appicon_blue_32.png",
      "64": "icons/appicon_blue_64.png",
      "128": "icons/appicon_blue_128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "128": "icons/appicon_blue_128.png"
  },
  "default_locale": "en"
}
